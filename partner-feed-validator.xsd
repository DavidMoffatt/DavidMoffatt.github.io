            <xs:element name="firstName" type="requiredStringType" minOccurs="1" maxOccurs="1"/>
            <xs:element name="middleName" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="lastName" type="requiredStringType" minOccurs="1" maxOccurs="1"/>
            <xs:element name="image" type="absoluteURI" minOccurs="0" maxOccurs="1"/>
            <xs:element name="role" minOccurs="1" maxOccurs="1">
              <xs:simpleType>               
                <xs:restriction base="xs:string">
                  <xs:enumeration value="Actor"/>
                  <xs:enumeration value="Anchor"/>
                  <xs:enumeration value="Host"/>
                  <xs:enumeration value="Narrator"/>
                  <xs:enumeration value="Voice"/>
                </xs:restriction>
              </xs:simpleType>
            </xs:element>
            <xs:element name="birthDate" type="dateType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="deathDate" type="dateType" minOccurs="0" maxOccurs="1"/>
          </xs:all>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="crewType">
    <xs:sequence>
      <xs:element name="person" minOccurs="0" maxOccurs="unbounded">
        <xs:complexType>
          <xs:all>
            <xs:element name="firstName" type="requiredStringType" minOccurs="1" maxOccurs="1"/>
            <xs:element name="middleName" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="lastName" type="requiredStringType" minOccurs="1" maxOccurs="1"/>
            <xs:element name="image" type="absoluteURI" minOccurs="0" maxOccurs="1"/>
            <xs:element name="role" minOccurs="1" maxOccurs="1">
              <xs:simpleType>                
                <xs:restriction base="xs:string">
                  <xs:enumeration value="Director"/>
                  <xs:enumeration value="Host"/>
                </xs:restriction>
              </xs:simpleType>
            </xs:element>
            <xs:element name="birthDate" type="dateType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="deathDate" type="dateType" minOccurs="0" maxOccurs="1"/>
          </xs:all>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="titlesType">
    <xs:annotation>
      <xs:documentation>
        In the future, multiple titles can be used here to support multiple languages. At the moment, Roku only supports English (en).
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="title" minOccurs="1" maxOccurs="unbounded">
        <xs:complexType>
          <xs:simpleContent>
            <xs:extension base="requiredStringType">
              <xs:attribute name="language" type="languageType" use="optional" default="en"/>
            </xs:extension>
          </xs:simpleContent>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="movieImagesType">
    <xs:sequence>
      <xs:element name="image" minOccurs="0" maxOccurs="unbounded">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="url" minOccurs="1" maxOccurs="1" type="absoluteURI"/>
          </xs:sequence>
          <xs:attribute name="language" type="languageType" use="optional" default="en"/>
          <xs:attribute name="category" use="optional" default="Poster Art">
            <xs:simpleType>
              <xs:restriction base="xs:string">
                <xs:enumeration value="Poster Art"/>
                <xs:enumeration value="Box Art"/>                
              </xs:restriction>
            </xs:simpleType>
          </xs:attribute>
          <xs:attribute name="width" use="optional">
            <xs:simpleType>
              <xs:restriction base="xs:string">
                <xs:pattern value="240"/>
              </xs:restriction>
            </xs:simpleType>
          </xs:attribute>
          <xs:attribute name="height" use="optional">
            <xs:simpleType>
              <xs:restriction base="xs:string">
                <xs:pattern value="360"/>
              </xs:restriction>
            </xs:simpleType>
          </xs:attribute>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="tvImagesType">
    <xs:sequence>
      <xs:element name="image" minOccurs="0" maxOccurs="unbounded">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="url" minOccurs="1" maxOccurs="1" type="absoluteURI"/>
          </xs:sequence>
          <xs:attribute name="language" type="languageType" use="optional" default="en"/>          
          <xs:attribute name="width" use="optional">
            <xs:simpleType>
              <xs:restriction base="xs:string">
                <xs:pattern value="360"/>
              </xs:restriction>
            </xs:simpleType>
          </xs:attribute>
          <xs:attribute name="height" use="optional">
            <xs:simpleType>
              <xs:restriction base="xs:string">
                <xs:pattern value="270"/>
              </xs:restriction>
            </xs:simpleType>
          </xs:attribute>
          <xs:attribute name="category" use="optional"/>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
  
  <xs:complexType name="descriptionType">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="language" type="languageType" use="optional">
          <xs:annotation>
            <xs:documentation>
              If omitted, default is en
            </xs:documentation>
          </xs:annotation>
        </xs:attribute>
        <xs:attribute name="length" type="descriptionLengthType" use="optional">
          <xs:annotation>
            <xs:documentation>
              If omitted, default is 60.
            </xs:documentation>
          </xs:annotation>
        </xs:attribute>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>
  <xs:complexType name="descriptionsType">
    <xs:annotation>
      <xs:documentation>
        You must provide a movie description that does not exceed 60 characters.
        You may want to, though not required, provide a second longer description
        not to exceed 500 characters.
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="description" minOccurs="1" maxOccurs="unbounded">
        <xs:complexType>
          <xs:simpleContent>
            <xs:restriction base="descriptionType">
              <xs:maxLength value="500"/>
            </xs:restriction>
          </xs:simpleContent>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
  <xs:simpleType name="dateType">
    <xs:annotation>
      <xs:documentation>Used to define date type. Supports mm/dd/yyyy or yyyy-mm-dd</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
      <xs:pattern value="\d{2}/\d{2}/\d{4}|\d{4}-\d{2}-\d{2}"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="keywordType">
    <xs:annotation>
      <xs:documentation>
        This type defines keyword category type
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
      <xs:enumeration value="Character"/>
      <xs:enumeration value="General"/>
      <xs:enumeration value="Mood"/>
      <xs:enumeration value="Setting"/>
      <xs:enumeration value="Subject"/>
      <xs:enumeration value="Theme"/>
      <xs:enumeration value="Time Period"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:complexType name="keywordsType">
    <xs:sequence>
      <xs:element name="keyword" minOccurs="0" maxOccurs="unbounded">
        <xs:complexType>
          <xs:all>
            <xs:element name="type" type="keywordType" minOccurs="1" maxOccurs="1"/>
            <xs:element name="word" minOccurs="1" maxOccurs="1">
              <xs:simpleType>
                <xs:restriction base="xs:string">
                  <xs:maxLength value="75"/>
                </xs:restriction>
              </xs:simpleType>
            </xs:element>
          </xs:all>
          <xs:attribute name="language" use="optional" default="en"/>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="ratingsType">
    <xs:sequence>
      <xs:element name="rating" maxOccurs="unbounded">
        <xs:complexType>
          <xs:all>
            <xs:element name="source" type="ratingSourceType" minOccurs="1" maxOccurs="1"/>
            <xs:element name="rating" type="ratingCodeType" minOccurs="1" maxOccurs="1"/>
          </xs:all>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="videosType">
    <xs:sequence>
      <xs:element name="video" minOccurs="1" maxOccurs="unbounded">
        <xs:complexType>
          <xs:all>
            <xs:element name="region" type="regionType" minOccurs="0" maxOccurs="1">
              <xs:annotation>
                <xs:documentation>If omitted, us will be default</xs:documentation>
              </xs:annotation>
            </xs:element>
            <xs:element name="playId" type="playIdType" minOccurs="1" maxOccurs="1"/>
            <xs:element name="viewOptions" minOccurs="1" maxOccurs="1">
              <xs:complexType>
                <xs:sequence>
                  <xs:element name="option" minOccurs="1" maxOccurs="unbounded">
                    <xs:complexType>
                      <xs:all>
                        <xs:element name="price" type="priceType" minOccurs="0" maxOccurs="1">
                          <xs:annotation>
                            <xs:documentation>
                              May be omitted if licenseType is subscription or free. When omitted, price will be set to 0.00.
                            </xs:documentation>
                          </xs:annotation>
                        </xs:element>
                        <xs:element name="currency" type="currencyType" minOccurs="0" maxOccurs="1">
                          <xs:annotation>
                            <xs:documentation>
                              If omitted, USD will be used.
                            </xs:documentation>
                          </xs:annotation>
                        </xs:element>
                        <xs:element name="quality" type="qualityType" minOccurs="1" maxOccurs="1"/>
                        <xs:element name="license" type="licenseType" minOccurs="1" maxOccurs="1"/>
                      </xs:all>
                    </xs:complexType>
                  </xs:element>
                </xs:sequence>
              </xs:complexType>
              <xs:unique name="uniqueVideoOptions">
                <xs:selector xpath="option"/>                
                <xs:field xpath="quality"/>
                <xs:field xpath="license"/>
              </xs:unique>
            </xs:element>
          </xs:all>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
  <xs:simpleType name="idType">
    <xs:annotation>
      <xs:documentation>
        Used to define constraints for id
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
      <xs:maxLength value="50"/>
      <xs:minLength value="3"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="runTimeType">
    <xs:annotation>
      <xs:documentation>
        Used to define constraints for runTime
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:unsignedInt">
      <xs:minInclusive value="0"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:element name="partnerContent">
    <xs:complexType>
      <xs:all>
        <xs:element name="movies" maxOccurs="1" minOccurs="0">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="movie" maxOccurs="unbounded">
                <xs:complexType>
                  <xs:all>
                    <xs:element name="titles" type="titlesType" minOccurs="1" maxOccurs="1"/>
                    <xs:element name="images" type="movieImagesType" minOccurs="0" maxOccurs="1"/>
                    <xs:element name="descriptions" type="descriptionsType" minOccurs="1" maxOccurs="1"/>
                    <xs:element name="runTime" type="runTimeType" minOccurs="1" maxOccurs="1"/>
                    <xs:element name="releaseYear" type="releaseYearType" minOccurs="1" maxOccurs="1"/>
                    <xs:element name="cast" type="castType" minOccurs="0" maxOccurs="1"/>
                    <xs:element name="crew" type="crewType" minOccurs="0" maxOccurs="1"/>
                    <xs:element name="ratings" type="ratingsType" minOccurs="0" maxOccurs="1"/>
                    <xs:element name="keywords" type="keywordsType" minOccurs="0" maxOccurs="1"/>
                    <xs:element name="genres" type="genresType" minOccurs="0" maxOccurs="1"/>
                    <xs:element name="videos" type="videosType" minOccurs="1" maxOccurs="1"/>
                  </xs:all>
                  <xs:attribute name="id" type="idType" use="required"/>
                </xs:complexType>               
              </xs:element>
            </xs:sequence>
          </xs:complexType>
          <xs:unique name="uniqueMovieId">
            <xs:selector xpath="movie"/>
            <xs:field xpath="@id"/>
          </xs:unique>
        </xs:element>
        <xs:element name="seriesItems" maxOccurs="1" minOccurs="0">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="series" maxOccurs="unbounded" minOccurs="1">
                <xs:complexType>
                  <xs:all>
                    <xs:element name="titles" type="titlesType" minOccurs="1" maxOccurs="1"/>
                    <xs:element name="images" type="tvImagesType" minOccurs="0" maxOccurs="1"/>
                    <xs:element name="descriptions" type="descriptionsType" minOccurs="1" maxOccurs="1"/>
                    <xs:element name="originalAirDate" type="dateType" minOccurs="0" maxOccurs="1"/>
                    <xs:element name="cast" type="castType" minOccurs="0" maxOccurs="1"/>
                    <xs:element name="crew" type="crewType" minOccurs="0" maxOccurs="1"/>
                    <xs:element name="seasons" minOccurs="1" maxOccurs="1">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="season" maxOccurs="unbounded" minOccurs="1">
                            <xs:complexType>
                              <xs:all>
                                <xs:element name="seasonNumber" type="xs:unsignedShort" minOccurs="1" maxOccurs="1"/>
                                <xs:element name="images" type="tvImagesType" minOccurs="0" maxOccurs="1"/>
                                <xs:element name="episodes" minOccurs="1" maxOccurs="1">
                                  <xs:complexType>
                                    <xs:sequence>
                                      <xs:element name="episode" maxOccurs="unbounded" minOccurs="1">
                                        <xs:complexType>
                                          <xs:all>
                                            <xs:element name="titles" type="titlesType" minOccurs="1" maxOccurs="1"/>
                                            <xs:element name="images" type="tvImagesType" minOccurs="0" maxOccurs="1"/>
                                            <xs:element name="descriptions" type="descriptionsType" minOccurs="1" maxOccurs="1"/>
                                            <xs:element name="episodeNumber" type="xs:unsignedShort" minOccurs="1" maxOccurs="1"/>
                                            <xs:element name="airDate" type="dateType" minOccurs="0" maxOccurs="1"/>
                                            <xs:element name="cast" type="castType" minOccurs="0" maxOccurs="1"/>
                                            <xs:element name="crew" type="crewType" minOccurs="0" maxOccurs="1"/>
                                            <xs:element name="ratings" type="ratingsType" minOccurs="0" maxOccurs="1"/>
                                            <xs:element name="keywords" type="keywordsType" minOccurs="0" maxOccurs="1"/>
                                            <xs:element name="genres" type="genresType" minOccurs="0" maxOccurs="1"/>
                                            <xs:element name="videos" type="videosType" minOccurs="1" maxOccurs="1"/>
                                          </xs:all>
                                          <xs:attribute name="id" type="idType" use="required"/>
                                        </xs:complexType>                                        
                                      </xs:element>
                                    </xs:sequence>
                                  </xs:complexType>
                                  <xs:unique name="uniqueEpisodeId">
                                    <xs:selector xpath="episode"/>
                                    <xs:field xpath="@id"/>
                                  </xs:unique>
                                </xs:element>
                              </xs:all>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>                      
                    </xs:element>
                  </xs:all>
                  <xs:attribute name="id" type="idType" use="required"/>
                </xs:complexType>                
              </xs:element>
            </xs:sequence>
          </xs:complexType>
          <xs:unique name="uniqueSeriesId">
            <xs:selector xpath="series"/>
            <xs:field xpath="@id"/>
          </xs:unique>
        </xs:element>
      </xs:all>
    </xs:complexType>
  </xs:element>
</xs:schema>
